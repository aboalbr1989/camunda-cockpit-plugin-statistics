<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cockpit.statistics">

  <resultMap id="durationMap"
    type="org.camunda.cockpit.plugin.statistics.dto.process.ProcessDurationDto">
    <result property="processDefinitionKey" column="KEY_" />
    <result property="startingTime" column="START_TIME_" />
    <result property="duration" column="DURATION_" />
  </resultMap>

  <select id="selectDurationOfTheChosenProcesses" parameterType="String"  resultMap="durationMap">
  SELECT
      KEY_,
      DURATION_,
      START_TIME_
    FROM
      ACT_HI_PROCINST E
        LEFT JOIN
          ACT_RE_PROCDEF def
        ON 
          def.ID_ = E.PROC_DEF_ID_
    WHERE
      E.ID_ = E.PROC_INST_ID_
      AND
      DURATION_ IS NOT NULL
      ${parameter.procDefSpec}
      
    ORDER BY KEY_ , START_TIME_
    </select>

</mapper>