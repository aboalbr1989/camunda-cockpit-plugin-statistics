<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cockpit.statistics">

	<resultMap id="historicUserTaskTimeSpecMapFilteredByProcDefKeyAndTimeSpec"
		type="org.camunda.cockpit.plugin.statistics.dto.usertask.UserTaskTimeSpecDto">
		<result property="userTaskName" column="ACT_NAME" />
		<result property="procDefKey" column="PROC_DEF_KEY" />
		<result property="startDate" column="START_DATE" />
		<result property="endDate" column="END_DATE" />
	</resultMap>

	<select id="selectHistoricUserTaskTimeSpecFByProcDefKeyAndTimeSpec"
		resultMap="historicUserTaskTimeSpecMapFilteredByProcDefKeyAndTimeSpec" parameterType="string">
		SELECT 
			A.NAME_ as ACT_NAME, 
			START_TIME_ as START_DATE,
			END_TIME_ as END_DATE,
			def.KEY_ as PROC_DEF_KEY
		FROM act_hi_taskinst A 
			LEFT JOIN
				ACT_RE_PROCDEF def
			ON 
				def.ID_ = A.PROC_DEF_ID_
		${parameter.procDefSpec} ${parameter.timeSpec}
		ORDER BY PROC_DEF_KEY, ACT_NAME
	</select>

</mapper>